{
  "version": 2,
  "framework": null,
  "buildCommand": "cd apexad-website && npm install --legacy-peer-deps --no-audit && CI=false npm run build",
  "outputDirectory": "apexad-website/build",
  "installCommand": "cd apexad-website && npm install --legacy-peer-deps --no-audit",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CI": "false",
    "SKIP_PREFLIGHT_CHECK": "true"
  }
} 